{
  "@context" : [
    "https://incf.github.io/neuroshapes/contexts/schema.json",
    {
      "this" : "https://neuroshapes.org/commons/collection/shapes/"
    }
  ],
  "@id" : "https://neuroshapes.org/commons/collection",
  "@type" : "nxv:Schema",
  "imports" : [
    "https://neuroshapes.org/commons/entity",
    "https://provshapes.org/schemas/collection"
  ],
  "shapes" : [
    {
      "@id" : "this:CollectionShape",
      "@type" : "sh:NodeShape",
      "label" : "A collection shape.",
      "nodeKind" : "sh:BlankNodeOrIRI",
      "and" : [
        {
          "node" : "https://provshapes.org/schemas/collection/shapes/CollectionShape"
        },
        {
          "node" : "https://neuroshapes.org/commons/entity/shapes/EntityShape"
        },
        {
          "property" : [
            {
              "path" : "schema:size",
              "name" : "Size",
              "description" : "Collection size. The collection can be empty with size 0.",
              "datatype" : "xsd:integer",
              "minInclusive" : 0,
              "maxCount" : 1
            }
          ]
        }
      ]
    }
  ]
}