{
  "@context": [
    "https://incf.github.io/neuroshapes/contexts/schema.json",
    {
      "this": "https://neuroshapes.org/commons/morphologymesh/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "https://neuroshapes.org/commons/entity",
    "https://neuroshapes.org/dash/distribution"
  ],
  "shapes": [
    {
      "@id": "this:MorphologyMeshShape",
      "@type": "sh:NodeShape",
      "label": "Morphology mesh Shape.",
      "targetClass": "nsg:MorphologyMesh",
      "nodekind": "sh:BlankNodeOrIRI",
      "and": [
        {
          "node": "https://neuroshapes.org/commons/entity/shapes/EntityShape"
        },
        {
          "property": [
            {
              "path": "schema:distribution",
              "name": "Distribution",
              "description": "Morphology mesh location.",
              "node": "this:MorphologyMeshDistributionShape",
              "minCount": 1
            }
          ]
        }
      ]
    },
    {
      "@id": "this:MorphologyMeshDistributionShape",
      "@type": "sh:NodeShape",
      "label": "A morphology mesh distribution shape.",
      "nodekind": "sh:BlankNodeOrIRI",
      "and": [
        {
          "node": "https://neuroshapes.org/dash/distribution/shapes/DistributionShape"
        },
        {
          "property": [
            {
              "path": "schema:mediaType",
              "name": "Media type",
              "description": "Morphology mesh allowed media types",
              "in": [
                "application/stl",
                "application/ply",
                "application/obj",
                "application/vtk",
                "application/binary"
              ]
            }
          ]
        }
      ]
    }
  ],
  "@id": "https://neuroshapes.org/commons/morphologymesh"
}