{
  "@context": [
    "https://incf.github.io/neuroshapes/contexts/schema.json",
    {
      "this": "https://neuroshapes.org/commons/sphereofinterest/shapes/"
    }
  ],
  "import": [
    "https://neuroshapes.org/schemas/neurosciencegraph/atlas/regionofinterest/v0.1.0",
    "https://neuroshapes.org/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.0"
  ],
  "@type": "nxv:Schema",
  "shapes": [
    {
      "@id": "this:SphereOfInterestShape",
      "@type": "sh:NodeShape",
      "label": "A region of interest with sphere as a geometric shape.",
      "nodeKind": "sh:BlankNodeOrIRI",
      "targetClass": "nsg:RegionOfInterest",
      "and": [
        {
          "node": "https://neuroshapes.org/commons/regionofinterest/shapes/RegionOfInterestShape"
        },
        {
          "property": [
            {
              "path": "nsg:geometry",
              "description": "The geometric shape of the sphere of interest.",
              "node": "this:SphereGeometricShapeShape",
              "minCount": 1,
              "maxCount": 1
            }
          ]
        }
      ]
    },
    {
      "@id": "this:SphereGeometricShapeShape",
      "@type": "sh:NodeShape",
      "label": "The shape of a  sphere geometry.",
      "targetObjectsOf": "nsg:geometry",
      "class": "nsg:Sphere",
      "property": [
        {
          "path": "nsg:geometryParameter",
          "name": "Parameters",
          "node": "this:SphereGeometryParameterShape",
          "minCount": 1,
          "maxCount": 1
        }
      ]
    },
    {
      "@id": "this:SphereGeometryParameterShape",
      "@type": "sh:NodeShape",
      "label": "The shape of sphere geometry parameters.",
      "targetObjectsOf": "nsg:geometryParameter",
      "property": [
        {
          "path": "nsg:center",
          "name": "Center",
          "description": "The sphere center coordinates",
          "node": "https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape",
          "minCount": 1,
          "maxCount": 1
        },
        {
          "path": "nsg:radius",
          "name": "Radius",
          "description": "The sphere radius",
          "node": "https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape",
          "minCount": 1,
          "maxCount": 1
        }
      ]
    }
  ],
  "@id": "https://neuroshapes.org/commons/sphereofinterest"
}