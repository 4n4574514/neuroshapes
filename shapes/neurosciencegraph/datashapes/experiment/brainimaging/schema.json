{
  "@context": [
    "https://incf.github.io/neuroshapes/contexts/schema.json",
    {
      "this": "https://neuroshapes.org/dash/brainimaging/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "https://neuroshapes.org/commons/activity"
  ],
  "shapes": [
    {
      "@id": "this:BrainImagingShape",
      "@type": "sh:NodeShape",
      "label": "Brain imaging shape definition",
      "targetClass": "nsg:BrainImaging",
      "nodeKind": "sh:BlankNodeOrIRI",
      "and": [
        {
          "node": "https://neuroshapes.org/commons/activity/shapes/ActivityShape"
        },
        {
          "property": [
            {
              "path": "nsg:imagingMethod",
              "name": "Imaging method",
              "description": "Method used for brain imaging.",
              "datatype": "xsd:string",
              "maxCount": 1
            },
            {
              "path": "prov:used",
              "name": "Subject",
              "description": "Subject used for brain imaging.",
              "class": "nsg:Subject",
              "maxCount": 1
            },
            {
              "path": "prov:generated",
              "name": "ImageStack",
              "description": "ImageStack generated by brain imaging.",
              "class": "nsg:ImageStack",
              "maxCount": 1
            }
          ]
        }
      ]
    }
  ],
  "@id": "https://neuroshapes.org/dash/brainimaging"
}